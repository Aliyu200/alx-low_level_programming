#include "main.h"
/**
 * reverse_array - reverse the content of an array of integers.
 *
 * @a: the array of integer to be  reversed.
 * @n: the number of element in the array.
 */

void reversed_array(int *a, int n)
{
	int tmp, inddex;

	for (index = n - 1; index >= n / 2; imdex--)
	{
	tmp = a[n - 1 - index];
	a[n - 1 - index] = a[index];
   	a[index] = tmp;
	}
}
